<div class="container">
  <h1>Currently logged in as: </h1>
  <div id="userName {{id}}"><h2>{{username}} (ID: {{id}})</h2></div>

  <div class="row">
    <div class="col-sm-6 offset-sm-3">
      <form action='/recipes' method='POST' id='newRecipe'>

        <input type='text' name='userId' class='hidden' value='{{id}}'>

        <label for='recipeName'><h2>Recipe Name: </h2></label>
        <input type='text' name='recipeName' class='form-control' required>


        <label for='measurement'><h2>Measurement: </h2></label>
        <input type='text' name='measurement' class='form-control' required>

        <label for='ingredientName'><h2>Ingredients: </h2></label>
        <input type='text' name='ingredientName' class='form-control' required>

        <label for='recipeInstructions'><h2>Instructions: </h2></label></br>
        <textarea name='recipeInstructions' class='form-control' required></textarea>
        </br>

        <input type='submit' class='btn btn-primary'>
      </form>
    </div>
  </div>
</div>